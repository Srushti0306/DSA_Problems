{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run C++ (GDB)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${fileDirname}/${fileBasenameNoExtension}.exe",
      "args": [],
      "cwd": "${fileDirname}",
      "MIMode": "gdb",
      "miDebuggerPath": "C:/MinGW/bin/gdb.exe",
      "externalConsole": true,
      "preLaunchTask": "C++ Build",
      "stopAtEntry": true,
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
